<%- include('partials/head') -%>
<body>
  <%- include('partials/header') -%>
  <main class="edit">
    <h2 class="edit__heading">Edit product here</h2>
    <div class="create-form">
      <form
        class="create-form__form"
        action="/admin/edit/<%= product._id %>?_method=PUT"
        method="POST"
        class="form-create"
      >
        <label for="admin-dash-title">Title</label>
        <input
          type="text"
          id="admin-dash-title"
          name="title"
          maxlength="40"
          value="<%= product.title %>"
          required
        />
        <label for="admin-dash-description">Description</label>
        <input
          type="text"
          id="admin-dash-description"
          name="description"
          maxlength="150"
          value="<%= product.description %>"
          required
        />
        <label for="admin-dash-category">Category</label>
        <select id="admin-dash-category" name="category" required>
          <option value="sweet">Sweet</option>
          <option value="savory">Savory</option>
          <option value="fruit">Fruit</option>
          <option value="vegan">Vegan</option>
        </select>
        <label for="admin-dash-priceS">Small size price</label>
        <input
          type="number"
          id="admin-dash-priceS"
          name="priceS"
          min="0"
          step="0.1"
          value="<%= product.priceS %>"
          required
        />
        <label for="admin-dash-priceL">Large size price</label>
        <input
          type="number"
          id="admin-dash-priceL"
          name="priceL"
          min="0"
          step="0.1"
          value="<%= product.priceL %>"
          required
        />
        <button
          type="submit"
          class="create-form__btn btn-solid"
          data-btn-edit-product
        >
          Edit product
        </button>
      </form>
    </div>
  </main>

  <%- include('partials/footer') -%>
</body>
