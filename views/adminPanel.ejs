<%- include('partials/head') -%>
<body>
  <%- include('partials/header') -%>
  <main class="admin">
    <h2 class="admin__heading">Admin Panel</h2>
    <div class="container-admin">
      <div class="create-form">
        <form
          action="/admin/product/new"
          method="POST"
          enctype="multipart/form-data"
          class="create-form__form"
        >
          <label for="admin-dash-title">Title</label>
          <input
            type="text"
            id="admin-dash-title"
            name="title"
            maxlength="40"
            required
          />
          <label for="admin-dash-description">Description</label>
          <input
            type="text"
            id="admin-dash-description"
            name="description"
            maxlength="150"
            required
          />
          <label for="admin-dash-category">Category</label>
          <select
            id="admin-dash-category"
            name="category"
            class="form-create__select"
            required
          >
            <option value="sweet">Sweet</option>
            <option value="savory">Savory</option>
            <option value="fruit">Fruit</option>
            <option value="vegan">Vegan</option>
          </select>
          <label for="admin-dash-image">Image</label>
          <input type="file" id="admin-dash-image" name="image" required />
          <label for="admin-dash-priceS">Small size price</label>
          <input
            type="number"
            id="admin-dash-priceS"
            name="priceS"
            min="0"
            step="0.1"
            required
          />
          <label for="admin-dash-priceL">Large size price</label>
          <input
            type="number"
            id="admin-dash-priceL"
            name="priceL"
            min="0"
            step="0.1"
            required
          />
          <button type="submit" class="create-form__btn btn-solid">
            Add new product
          </button>
        </form>
      </div>

      <div class="search-form">
        <form
          action="/admin/product/search"
          method="POST"
          class="search-form__form"
        >
          <input
            type="text"
            name="search"
            placeholder="Type the name of the product to edit or remove"
          />
          <button type="submit" class="search-form__btn btn-solid">
            Search product
          </button>
        </form>
        <% if (products.length > 0) { products.forEach((product) => { %>
        <div class="product-result">
          <h4 class="product-result__title"><%= product.title %></h4>
          <p class="product-result__description"><%= product.description %></p>
          <button
            class="product-result__btn btn-solid"
            data-admin-edit-btn-id="<%= product._id %>"
          >
            Edit
          </button>
          <button
            class="product-result__btn btn-solid"
            data-admin-remove-btn-id="<%= product._id %>"
          >
            Remove
          </button>
        </div>
        <% })} %> <% if (message) { %>
        <p class="admin-messages"><%=message%></p>
        <% } %>
      </div>
    </div>
  </main>
  <%- include('partials/footer') -%>
</body>
